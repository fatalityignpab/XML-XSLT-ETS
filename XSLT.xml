<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
<xsl:template match="/">


<head>
<title>Untitled Document</title>
</head>
  <html>
  <body>
    <table border="1">
      <tr bgcolor="#5F9EA0">
        <th>Boleta</th>
        <th>Total Activos</th>
        <th>Total Pasivos y Capital</th>
        <th>Diferencia</th>
        <th>Conclusion</th>
      </tr>
      <xsl:for-each select="mercado/financieras">
      <xsl:variable name="activo" select="infraestructura + bancos + insumos +         en_x0020_proceso + mercancias + clientes " />
      <xsl:variable name="pasivo" select="proveedores + prestamos + social + utilidades" />
      <xsl:variable name="total" select="$activo - $pasivo"/>
      <tr bgcolor="#FFFFFF">
        <td><font color="blue"><xsl:value-of select="boleta" /></font></td>
        <td><font color="blue"><xsl:value-of select="$activo"/></font></td>
        <td><font color="blue"><xsl:value-of select="$pasivo" /></font></td>
        <td><font color="blue"><xsl:value-of select="$total" /></font></td>

        <xsl:choose>
        <xsl:when test= "$activo - $pasivo &lt;-.01 ">

        <td><font color="black">El balance general no cuadra</font></td>
        </xsl:when>
        <xsl:when test= "$activo - $pasivo &gt;.01 ">

        <td><font color="black">El balance general no cuadra</font></td>
        </xsl:when>
        <xsl:otherwise>
        <td><font color="black">El balance general cuadra</font></td>
        </xsl:otherwise>
        </xsl:choose>
      </xsl:for-each>
      </tr>
    </table>
  </body>
  </html>
</xsl:template>
</xsl:stylesheet>